<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2025-10-20-16-53-00-create-chapter-table" author="daniyal">

        <createTable tableName="chapters">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="order_number" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_time" type="TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP"/>
        </createTable>

        <!-- Внешний ключ: каждая глава принадлежит курсу -->
        <addForeignKeyConstraint
                constraintName="fk_chapters_courses"
                baseTableName="chapters"
                baseColumnNames="course_id"
                referencedTableName="courses"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
